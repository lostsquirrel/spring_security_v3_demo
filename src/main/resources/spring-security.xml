<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<http>
		<intercept-url pattern="/login*" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<!-- <intercept-url pattern="/login.jsp*" filters="none"/> -->
		<intercept-url pattern="/manager/**" access="ROLE_ADMIN" />
		<intercept-url pattern="/secure/**" access="ROLE_USER"
			requires-channel="https" />
		<intercept-url pattern="/**" access="ROLE_USER" />
		<!-- intercept-url 还可以通过method属性控件http访问方式 (GET, POST, PUT etc.) -->
		<form-login login-page='/login' default-target-url='/home'
			always-use-default-target='true' />
		<http-basic />
		<logout logout-url="/logout" logout-success-url="/login" />
		<session-management invalid-session-url="/sessionTimeout.htm" />

	</http>
	<authentication-manager>
		<authentication-provider ref="daoAuthenticationProvider" />
	</authentication-manager>


	<beans:bean id="daoAuthenticationProvider"
		class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
		<beans:property name="userDetailsService" ref="inMemoryDaoImpl" />
		<beans:property name="passwordEncoder" ref="noEncodePasswordEncoder" />
	</beans:bean>

	<user-service id="inMemoryDaoImpl">
		<user name="jimi" password="jimis" authorities="ROLE_USER, ROLE_ADMIN" />
		<user name="bob" password="bobs" authorities="ROLE_USER" />
	</user-service>

	<beans:bean id="noEncodePasswordEncoder"
		class="demo.spring.security.NotEncodePasswordEncoder">
	</beans:bean>
</beans:beans>